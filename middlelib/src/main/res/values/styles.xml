<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Ly按钮样式-->
    <declare-styleable name="JButton">

        <attr name="mode" format="integer"></attr>
    </declare-styleable>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/bg_loaddialog</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="alertDialog_style" parent="loading_dialog">
        <item name="android:windowBackground">@color/base_color_transparent</item>
    </style>
    <!--侧滑菜单-->
    <style name="SwipeBackLayout">
        <item name="edge_size">60dip</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>
</resources>